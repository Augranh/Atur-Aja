{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.4"
    },
    "pages/**/*.php": {
      "runtime": "vercel-php@0.7.4"
    },
    "*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/index.php" },
    { "source": "/dashboard", "destination": "/pages/dashboard/index.php" },
    { "source": "/dashboard/(.*)", "destination": "/pages/dashboard/$1.php" },
    { "source": "/auth/login", "destination": "/pages/auth/login.php" },
    { "source": "/auth/signup", "destination": "/pages/auth/signup.php" },
    { "source": "/pages/auth/login", "destination": "/pages/auth/login.php" },
    { "source": "/pages/auth/signup", "destination": "/pages/auth/signup.php" },
    {
      "source": "/pages/dashboard",
      "destination": "/pages/dashboard/index.php"
    }
  ]
}
