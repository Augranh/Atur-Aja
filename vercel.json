{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/api/index.php" },
    { "source": "pages/dashboard", "destination": "/api/index.php" },
    { "source": "pages/dashboard/(.*)", "destination": "/api/index.php" },
    { "source": "pages/auth/login", "destination": "/api/index.php" },
    { "source": "pages/auth/signup", "destination": "/api/index.php" }
  ]
}
